<h1>Kadir_Atali</h1>
<div class="row">
  <div class="col-sm-8">
    <% if @posts.any? %>
      <% for post in @posts %>
        <div class="jumbotron" style="padding: 10px;">
          <h2><%= link_to post.title, post_path(post.id) %></h2>
          <p>✍ <%= link_to post.user.username, user_detail_path(post.user) %> |
            ⏱️<%= time_ago_in_words(post.created_at) %> ago | 📝 <%= post.comments.accepted.count %> </p>
          <p><%= substr(post.content) %></p>
          <p>Vote: <%= post.vote_count %></p>
        </div>
      <% end %>
    <% else %>
      <div class="alert alert-warning">
        No post here. Can you add a post please ?
      </div>
    <% end %>
  </div>
  <div style="text-align:center;height:100px;width:50%;background-color:#FFE4C4;margin:20px;border:2px solid;border-radius:10px">
    <% if @users.count <= 1 %>
      <h3 style="padding-top:20px">You are online</h3>
    <% else %>
      <h3>New Users</h3>
      <% for user in @users %>
        <p>
          <%= link_to user.username, user_detail_path(user) %> -
          <%= user.posts.count %> posts
        </p>
      <% end %>
    <% end %>
  </div>
</div>